{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "lib": ["dom", "es2017"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules/**",
    "public"
  ]
}

